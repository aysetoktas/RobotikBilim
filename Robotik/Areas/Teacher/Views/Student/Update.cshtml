@using Entity
@model User
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
    List<User> users = Query.UserList();
    List<Classroom> classrooms = Query.ClassroomList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Öğrenci Güncelle</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Teacher/Student/Update" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="ID">User ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>
                            <div class="form-group">
                                <label for="ClassroomID">Sınıf Seçiniz:</label>
                                <select name="ClassroomID" class="form-control">
                                    @foreach (var item in classrooms)
                                    {
                                        <option @(Model.ClassroomID == item.ID ? "selected=\"selected\"" : "" ) value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="FirstName">Ad</label>
                                <input name="FirstName" value="@Model.FirstName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="LastName">Soyad</label>
                                <input name="LastName" value="@Model.LastName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="UserName">Ad</label>
                                <input name="UserName" value="@Model.UserName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Email">E-Mail</label>
                                <input name="Email" value="@Model.Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Password">Şifre</label>
                                <input name="Password" value="@Model.Password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Telefon</label>
                                <input name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                            </div>
                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>