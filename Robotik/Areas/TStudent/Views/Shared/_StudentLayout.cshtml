@using Entity
@{
    Layout = null;
    Student currentStudent = Session["currentStudent"] as Student;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Areas/TStudent/Content/img/logo.png">
    <link rel="icon" type="image/png" href="~/Areas/TStudent/Content/img/logo.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>
        @*@ViewBag.Title*@
    </title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <link href="~/Areas/TStudent/Content/css/material-dashboard.css?v=2.1.2" rel="stylesheet" />
    <link href="~/Areas/TStudent/Content/demo/demo.css" rel="stylesheet" />
</head>

<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="white" data-image="~/Areas/TStudent/Content/img/sidebar-1.jpg">
            <div class="logo">
                <a href="" class="simple-text logo-normal">
                    <img src="~/Areas/TStudent/Content/img/logo.png" alt="" height="50px;" width="70px;">
                    <h6></h6>
                    <h4><b>ROBOTİK BİLİM</b></h4>
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item active  ">
                        <a style="background-color:#ff9800" class="nav-link" href="/TStudent/Home/Index">
                            <i class="material-icons">dashboard</i>
                            <p>Anasayfa</p>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a style="background-color:#f44336" class="nav-link" href="/TStudent/Document/ClassroomList">
                            <i class="material-icons">bubble_chart</i>
                            <p>Dokümanlar</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-md-start">
                        <span class="title">Hoşgeldiniz Sn. @currentStudent.FirstName.ToUpper() @currentStudent.LastName.ToUpper()  </span>
                    </div>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item btn-rotate dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Çıkış Yap
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("Logout", "Account", new { area = "" })">Çıkış Yap</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
            <footer class="footer">
                <div class="container-fluid">
                    <div class="copyright float-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>,
                        <a>Ayşe TOKTAŞ</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Areas/TStudent/Content/js/core/jquery.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/core/popper.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/core/bootstrap-material-design.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/moment.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/sweetalert2.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/jquery.validate.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/jquery.bootstrap-wizard.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/bootstrap-selectpicker.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/jquery.dataTables.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/bootstrap-tagsinput.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/jasny-bootstrap.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/fullcalendar.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/jquery-jvectormap.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/nouislider.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/core-js/2.4.1/core.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/arrive.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/chartist.min.js"></script>
    <script src="~/Areas/TStudent/Content/js/plugins/bootstrap-notify.js"></script>
    <script src="~/Areas/TStudent/Content/js/material-dashboard.js?v=2.1.2" type="text/javascript"></script>
    <script src="~/Areas/TStudent/Content/demo/demo.js"></script>
    <script src="~/Areas/TStudent/Content/js/CustomScript.js"></script>

    <!--Datatable-->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/fixedcolumns/3.3.2/css/fixedColumns.dataTables.min.css" />
    <script type="text/javascript" src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/fixedcolumns/3.3.2/js/dataTables.fixedColumns.min.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#eduLessonTable').DataTable();
            $('#educationTable').DataTable();
            $('#teacherTable').DataTable({
                "autoWidth": false,
                "columnDefs": [
                    { "width": "20%", "targets": 0 }
                ]
            });
            $('#studentTable').DataTable({
                "autoWidth": false,
                "columnDefs": [
                    { "width": "20%", "targets": 0 }
                ]
            });
            $('#categoryTable').DataTable();
            $('#unitTable').DataTable();
            $('#adminTable').DataTable();
        });
    </script>
</body>
</html>
