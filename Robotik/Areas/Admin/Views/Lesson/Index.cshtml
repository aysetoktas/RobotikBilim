@using Entity
@model Lesson
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Lesson> lessons = Query.LessonList();
    List<Education> educations = Query.EducationList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">DERSLER</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="display nowrap" style="width:100%" id="eduLessonTable">
                                <thead class="text-primary">
                                    <tr>
                                        <th style="width:100px;">EğitimAdı</th>
                                        <th>ÜniteAdı</th>
                                        <th>Ders Adı</th>
                                        <th>Ders Kodu</th>
                                        @*<th>Ders Logosu</th>*@
                                        <th>Video Linki</th>
                                        <th>Pdf</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in lessons)
                                    {
                                    <tr>
                                        <td>@item.Education.Name</td>
                                        <td>@item.Level.Name</td>
                                        <td>@item.Name</td>
                                        <td>@item.Code</td>
                                        @*<td>@item.Logo</td>*@
                                        <td>@item.Path</td>
                                        <td>@item.Content</td>
                                        <td>
                                            <a href="/Admin/Lesson/LessonUpdate/@item.ID">
                                                <button type="button" class="btn btn-info">GÜNCELLE</button>
                                            </a>
                                            <a href="/Admin/Lesson/LessonDelete/@item.ID">
                                                <button type="button" class="btn btn-danger">SİL</button>
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>