@using Entity
@model Education
@{
    ViewBag.Title = "EducationUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Education> educations = Query.EducationList();

}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">EĞİTİM GÜNCELLE</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/Education/EducationUpdate" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="ID">Eğitim ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>
                            <div class="form-group">
                                <label for="Name">Eğitim Adı</label>
                                <input name="Name" value="@Model.Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Note">Note</label>
                                <input name="Note" value="@Model.Note" class="form-control" />
                            </div>
                            <div class="">
                                <label for="ImagePath">Eğitim Logosunu Güncelle</label>
                                <input name="ImagePath" value="@Model.ImagePath" type="file" />
                            </div>
                            <div class="form-group">
                                <label for="Hour">Tarih</label>
                                <input name="Hour" value="@Model.Hour" class="form-control" />
                            </div>
                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

