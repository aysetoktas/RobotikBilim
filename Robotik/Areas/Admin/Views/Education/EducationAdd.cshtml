@using Entity
@{
    ViewBag.Title = "EducationAdd";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Education> educations = Query.EducationList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">EĞİTİM EKLE</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/Education/EducationAdd" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="Name">Eğitim Adı</label>
                                <input name="Name" class="form-control" rows="3" required="" />
                            </div>
                            <div class="form-group">
                                <label for="Note">Not</label>
                                <input name="Note" class="form-control" rows="3" required="" />
                            </div>
                            <div class="form-group">
                                <label for="Hour">Eğitim Saati</label>
                                <input name="Hour" class="form-control" rows="3" required="" />
                            </div>
                            <div class="">
                                <label for="ImagePath">Eğitim Logosu</label>
                                <input type="file" name="ImagePath"/>
                            </div>
                            <input type="submit" value="Ekle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


