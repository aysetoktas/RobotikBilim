@using Entity
@model Classroom
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Teacher/Views/Shared/_TeacherLayout.cshtml";
    List<Classroom> classrooms = Query.ClassroomList();
}
<form action="/Teacher/Classroom/Update" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="ID">ID</label>
        <input readonly name="ID" value="@Model.ID" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Name">Sınıf Adı</label>
        <input name="Name" value="@Model.Name" class="form-control" />
    </div>
    <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
</form>