@using Entity
@{
    ViewBag.Title = "LevelUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Level> levels = Query.LevelList();
    List<Education> educations = Query.EducationList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Sınıf Güncelle</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/Level/LevelUpdate" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="ID">Seviye ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>
                            <div class="form-group">
                                <label for="EducationID">Eğitim Seçiniz:</label>
                                <select name="EducationID" class="form-control">
                                    @foreach (var item in educations)
                                    {
                                        <option @(Model.EducationID == item.ID ? "selected=\"selected\"" : "" ) value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Name">Seviye Adı</label>
                                <input name="Name" value="@Model.Name" class="form-control" />
                            </div>
                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>