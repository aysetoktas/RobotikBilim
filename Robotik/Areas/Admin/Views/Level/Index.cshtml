@using Entity
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Level> levels = Query.LevelList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title">SEVİYELER</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="display" style="width:100%" id="categoryTable">
                                <thead class=" text-primary">
                                    <tr>
                                        <th>Eğitim Adı</th>
                                        <th>Seviye</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in levels)
                                    {
                                        <tr>
                                            <td>@item.Education.Name</td>
                                            <td>@item.Name</td>
                                            <td>
                                                <a href="/Admin/Level/LevelUpdate/@item.ID">
                                                    <button type="button" class="btn btn-info">GÜNCELLE</button>
                                                </a>
                                                <a href="/Admin/Level/LevelDelete/@item.ID">
                                                    <button type="button" class="btn btn-danger">SİL</button>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>