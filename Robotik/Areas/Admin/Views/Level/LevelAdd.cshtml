@using Entity
@{
    ViewBag.Title = "LevelAdd";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Level> levels = Query.LevelList();
    List<Education> educations = Query.EducationList();
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">SEVİYE EKLE</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/Level/LevelAdd" method="post">
                            <div class="form-group">
                                <label for="EducationID">Eğitim Seçiniz:</label>
                                <select name="EducationID" class="form-control">
                                    @foreach (var item in educations)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Name">Ünite Adı</label>
                                <input name="Name" class="form-control" rows="3" />
                            </div>
                            <input type="submit" value="Ekle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>